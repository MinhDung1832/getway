<script type="text/javascript">

    function Save() {
        //VendorInfo
        var info_obj = {};
        info_obj.businessType = $('#businessType').val();
        info_obj.firmName = $('#firmName').val();
        info_obj.Address = $('#Address').val();
        info_obj.phoneNo = $('#phoneNo').val();
        info_obj.website = $('#website').val();
        info_obj.email = $('#email').val();
        info_obj.facebook = $('#facebook').val();
        info_obj.industryType = $('#industryType').val();
        info_obj.registrationBusiness = $('#registrationBusiness').val();
        info_obj.registrationTax = $('#registrationTax').val();
        info_obj.bankAccount = $('#bankAccount').val();
        info_obj.atBank = $('#atBank').val();
        info_obj.E_Invoice = $('#E_Invoice').prop('checked') == false ? 0 : 1;
        info_obj.ERP_Name = readeMulti('ERP_Name');

        console.log(JSON.stringify(info_obj));

        //end VendorInfo

        //Capability
        var cap_obj = {};
        cap_obj.registrationTax = $('#registrationTax').val();
        cap_obj.yearActive = $('#yearActive').val();
        cap_obj.employeesScale = $('#employeesScale').val();
        cap_obj.coverageMarket = readeMulti('coverageMarket');
        cap_obj.previousRevenue = $('#previousRevenue').val();
        cap_obj.competencyCore = readeMulti('competencyCore');
        cap_obj.customerKey = $('#customerKey').val();
        cap_obj.warehouseAcreage = $('#warehouseAcreage').val();
        cap_obj.truckQuantity = $('#truckQuantity').val();

        console.log(JSON.stringify(cap_obj));
        //End Capability

        //Contact
        var con_obj = {};
        con_obj.registrationTax = $('#registrationTax').val();
        con_obj.BBM_Code = $('#BBM_Code').val();
        con_obj.representativeName = $('#representativeName').val();
        con_obj.representativeEmail = $('#representativeEmail').val();
        con_obj.representativePosition = $('#representativePosition').val();
        con_obj.representativePhone = $('#representativePhone').val();
        con_obj.contactName = $('#contactName').val();
        con_obj.contactEmail = $('#contactEmail').val();
        con_obj.contactPosition = $('#contactPosition').val();
        con_obj.contactPhone = $('#contactPhone').val();

        console.log(JSON.stringify(con_obj));
        //End Capability


        $.ajax({
            type: "POST",
            url: "/Vendor/registrationTaxExist",
            data: '{registrationTax:"' + $('#registrationTax').val() + '"}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {

                if (r.code == '0') {

                    $.ajax({
                        type: "POST",
                        url: "/Vendor/addVendor",
                        data: '{info:' + JSON.stringify(info_obj) + ',cap:' + JSON.stringify(cap_obj) + ',con:' + JSON.stringify(con_obj) + '}',
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (r1) {
                            var sub = JSON.parse(r1);
                            if (sub["code"] == '1') {
                                window.location.href = '/Product/Create';
                            } else {
                                alert("Có lỗi xảy ra thử lại sau!");
                            }
                        }
                    });

                } else {
                    alert("Mã số thuế đa được đăng ký!");
                }
            }
        });
    }

    function ReII(strSelID) {

        $('#' + strSelID + '_txt').append('<input type="button" id="btn_' + strSelID + '_del_' + $('#' + strSelID + '').val() + '"  name="' + $('#' + strSelID + '').val() + '-' + $('#' + strSelID + ' option:selected').text() + '" value="' + $('#' + strSelID + ' option:selected').text() + '  &#10006;" onclick="AddSEl(\'' + strSelID + '\',\'' + $('#' + strSelID + '').val() + '\',\'' + $('#' + strSelID + ' option:selected').text() + '\')" class="btn-primary" style="float:left; margin:3px;border-radius: 20px; font-size: 12px !important;"/>')

        var x = document.getElementById(strSelID);
        x.remove(x.selectedIndex);
    }

    function AddSEl(strSelID, strId, strVal) {

        var x = document.getElementById(strSelID);
        var option = document.createElement("option");
        option.value = strId;
        option.text = strVal;
        x.add(option);

        sortSelectOptions('#' + strSelID);

        document.getElementById("btn_" + strSelID + "_del_" + strId).remove();
    }

    function sortSelectOptions(selectElement) {
        var options = $(selectElement + " option");

        options.sort(function (a, b) {
            if (a.text.toUpperCase() > b.text.toUpperCase()) return 1;
            else if (a.text.toUpperCase() < b.text.toUpperCase()) return -1;
            else return 0;
        });

        $(selectElement).empty().append(options);
        $(selectElement).val("");
    }

    function readeMulti(strSelID) {
        var str_rt = "";
        var c = document.getElementById(strSelID+"_txt").children;
        for (i = 0; i < c.length; i++) {
            if (i == 0) {
                console.log(c[i].name);

                str_rt += c[i].name;
            } else {
                console.log('|' + c[i].name);

                str_rt += '|' + c[i].name;
            }

        }

        return str_rt;
    }
</script>

