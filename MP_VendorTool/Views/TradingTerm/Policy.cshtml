<script type="text/javascript">

    $(document).ready(function () {
        
    });
    function pop() {
        //document.getElementById('modalDetails').modal();
    }

    function Save() {
        if ($('#ck_Accept').prop('checked') == true) {

            if ($('#dayQty').val() != '0') {

                $.ajax({
                    type: "POST",
                    url: "/Tradingterm/addDayRefund",
                    data: '{tradingtermId:"@(ViewBag.tradingtermId)",dayQty:' + $('#dayQty').val()+ '}',
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (r1) {

                        if (r1.code == '0') {
                            //window.location.href = '/Vendor/';

                            document.getElementById("showPop").click();

                        } else {
                            alert("Có lỗi xảy ra thử lại sau!");
                        }
                    }
                });


            } else {
                alert('Nhập số tháng đổi trả!!!');
            }

        } else {
            alert("Chọn đồng ý với các điều khoản!!!!");
        }
    }
</script>

