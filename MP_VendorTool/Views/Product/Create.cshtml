        $('#txtMImage').val(GetMuitiImg());
    }

    function GetMuitiImg() {
        var str = "";
        $(".boximg img").each(function () {
            str += $(this).attr('src') + ',';
        })
        return str;
    }

    function deleteMuiti(img, inputimg) {
        img.parent().parent().remove();
        $('#' + inputimg).val(GetMuitiImg());
