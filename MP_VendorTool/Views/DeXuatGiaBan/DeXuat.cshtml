<script type="text/javascript">

    $(function () {
        var url = new URL(window.location);
        if (url.searchParams.get("NhaCC")) $("#NhaCC").val(url.searchParams.get("NhaCC"));
        if (url.searchParams.get("MaHang")) $("#MaHang").val(url.searchParams.get("MaHang"));
        if (url.searchParams.get("MaHang")) $("#mh").val(url.searchParams.get("MaHang"));

        $('#txtHead').html("Đề xuất giá bán");
        $('#f_dev').html("");
        $('#f_header').html("");
        $('#v_review').hide();
        $('#v_view').hide();
        $('#v_approve').hide();
        $('#NhaCC').selectpicker('refresh');
        js_onchange_NCC_MaHang();

    });

    function js_onchange_NCC_MaHang() {
        var NCC = fomart_split($('#NhaCC option:selected').text(), 0);
        $('#MaHang').empty();
        if (NCC.length > 0) {

            // Call MaHang
            $.ajax({
                url: '/DeXuatGiaBan/SP_DeXuqatGiaBan_Pro_ITEM_Vendor',
                type: 'POST',
                data: JSON.stringify({ NCC: NCC }),
                contentType: 'application/json, charset=utf-8',
                success: function (data) {
                    var row = JSON.parse(data);
                    if (row != null) {
                        $('#MaHang').empty();
                        $('#MaHang').append('<option value="">--Chọn mã hàng--</option>');
                        for (i in row) {
                            $('#MaHang').append('<option value="' + row[i].Code + '">' + row[i].Code + ' - ' + row[i].Name + '</option>');
                        }
                    }
                    var mh = $('#mh').val();
                    if (mh != "") {
                        $('#MaHang').val(mh);
                        js_onchange_barcode();
                    }
                    $('#MaHang').selectpicker('refresh');
                }
            });
        }

        var url = new URL(window.location);
        if (url.searchParams.get("NhaCC")) $("#NhaCC").val(url.searchParams.get("NhaCC"));
        if (url.searchParams.get("MaHang")) $("#MaHang").val(url.searchParams.get("MaHang"));
        $('#MaHang').selectpicker('refresh');

    }

    function js_onchange_barcode(r) {
        $('#GpMoi').val('');
        $('#GpFunction').val('');
        $('#GpCu').val('');
        $('#GiaBanCu').val('');
        $('#GiaMua').val('');

        let nameProduct = $('#MaHang option:selected').text();
        $('#Barcode' + r).empty();
        $('#Barcode' + r).append('<option value="">--Chọn Barcode--</option>');
        var item = nameProduct.split(" - ");

        let NhaCC = $('#NhaCC option:selected').text();
        var arNhaCC = NhaCC.split(" - ");
        if (nameProduct.length > 0) {

            // Call Barcode
            $.ajax({
                url: '/DeXuatGiaBan/GetListBarcode',
                type: 'POST',
                data: JSON.stringify({ itemNo: item[0] }),
                contentType: 'application/json, charset=utf-8',
                success: function (data) {
                    var row = JSON.parse(data);
                    if (row != null) {
                        $('#Barcode').empty();
                        for (i in row) {
                            $('#Barcode').append('<option value="' + row[i].Code + '">' + row[i].Name + '</option>');
                        }
                    }
                    $('#Barcode').selectpicker('refresh');
                }
            });
            debugger;
            // Show bảng [SalesPrice] trên [DWH]
            $.ajax({
                type: "POST",
                url: "/DeXuatGiaBan/SalesPrice_ThayDoiGiaAll",
                data: JSON.stringify({ MaHang: item[0] }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                beforeSend: function () {
                },
                success: function (data) {
                    if (data != null) {
                        $('#GiaBanCu').val(data.Name);
                    }
                }, error: function () {
                }
            });

            //GiaMua_DeXuatGiaBan
            $.ajax({
                type: "POST",
                url: "/DeXuatGiaBan/GiaMua_DeXuatGiaBan",
                data: JSON.stringify({ MaHang: item[0], Vendor: arNhaCC[0] }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                beforeSend: function () {
                },
                success: function (data) {
                    if (data != null) {
                        $('#GiaMua').val(data.Name);
                    }
                }, error: function () {
                }
            });

            //%GP Function
            $.ajax({
                type: "POST",
                url: "/DeXuatGiaBan/PTGPFunction_DeXuatGiaBan",
                data: JSON.stringify({ MaHang: item[0] }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                beforeSend: function () {
                },
                success: function (data) {
                    if (data != null) {
                        $('#GpFunction').val(data.Code);
                        $('#hdGpFunction').val(data.Name);
                    }
                }, error: function () {
                }
            });

            PhanTramGp();
        }
    }

    function PhanTramGp() {
        setTimeout(function () {
            // %GPCu
            let GiaBanCu = $('#GiaBanCu').val().replaceAll(".", "").replaceAll(",", "");
            let GiaMua = $('#GiaMua').val().replaceAll(".", "").replaceAll(",", "");
            if (GiaBanCu.length > 0 && GiaMua.length > 0) {
                let Sum = (((parseInt(GiaBanCu) - parseInt(GiaMua)) / parseInt(GiaMua)) * 100);
                let SumA = ((parseInt(GiaBanCu) - parseInt(GiaMua)) / parseInt(GiaMua));
                $('#hdGpCu').val(Sum.toFixed(2) + "%");
                $('#GpCu').val(SumA);

            }
            else {
                $('#hdGpCu').val('');
                $('#GpCu').val('');
            }

            // %GPMoi
            let GiaMoi = $('#GiaMoi').val().replaceAll(".", "").replaceAll(",", "");
            if (GiaMoi.length > 0 && GiaMua.length > 0) {
                let SumMoi = (((parseInt(GiaMoi) - parseInt(GiaMua)) / parseInt(GiaMua)) * 100);
                let SumMoiA = ((parseInt(GiaMoi) - parseInt(GiaMua)) / parseInt(GiaMua));
                $('#hdGpMoi').val(SumMoi.toFixed(2) + "%");
                $('#GpMoi').val(SumMoiA);
            }
            else {
                $('#hdGpMoi').val('');
                $('#GpMoi').val('');
            }

        }, 2000);
    }



    function PhanTramGp_Change() {
