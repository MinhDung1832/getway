    function fn_save(Status) {
        if (
            $('#NhaCC').val().length == 0 ||
            $('#MaHang').val().length == 0 ||
            $('#GiaMoi').val().length == 0
        ) {
            alert('Vui lòng nhập các trường đầy đủ (*) ');
            return;
        }
        var MaHang = $('#MaHang option:selected').text();
        var arrMaHang = MaHang.split(' - ');
        var NhaCC = $('#NhaCC option:selected').text();
        var arrNhaCC = NhaCC.split(' - ');

        var prd = {};
        prd.MaNCC = arrNhaCC[0];
        prd.TenNCC = arrNhaCC[1];
        prd.MaHang = arrMaHang[0];
        prd.TenHang = arrMaHang[1];
        prd.Barcode = $('#Barcode').val();
        prd.Link = $('#imgLink').val();

        prd.GiaBanCu = $('#GiaBanCu').val().replaceAll(".", "").replaceAll(",", "");
        prd.GiaMoi = $('#GiaMoi').val().replaceAll(".", "").replaceAll(",", "");
        prd.GiaMua = $('#GiaMua').val().replaceAll(".", "").replaceAll(",", "");

        prd.GpCu = $('#GpCu').val();
        prd.GpMoi = $('#GpMoi').val();
        prd.GpFunction = $('#GpFunction').val();

        prd.NgayThongBaoChinhThuc = $('#NgayThongBaoChinhThuc').val();
        prd.NgayHieuLuc = $('#NgayHieuLuc').val();
        prd.NgayKetThuc = $('#NgayKetThuc').val();

        prd.Status = Status;
        console.log(JSON.stringify({ prd }));
        console.log(prd);

        $.ajax({
            url: '/DeXuatGiaBan/Create_DeXuatGiaBan',
            type: 'POST',
            data: JSON.stringify({ info: prd }),
            contentType: 'application/json, charset=utf-8',
            beforeSend: function () {
                //  js_Loading(true, 1);
            },
            success: function (data) {
                if (data) {
                    jAlert('Thêm mới thành công', 'Thông báo', (r) => {
                        $('#imgLink').val('');

                        $('#GiaBanCu').val('');
                        $('#GiaMoi').val('');
                        $('#GiaMua').val('');

                        $('#GpCu').val('');
                        $('#GpMoi').val('');
                        $('#GpFunction').val('');

                        $('#hdGpCu').val('');
                        $('#hdGpMoi').val('');
                        $('#hdGpFunction').val('');

                        $('#NgayThongBaoChinhThuc').val('');
                        $('#NgayHieuLuc').val('');
                        $('#NgayKetThuc').val('');
                        location.reload();
                    });
                } else {
                    jAlert('Có lỗi xảy ra', 'Thông báo');
                }
                js_Loading(false, 1);
            },
            error: function () {
                js_Loading(false, 1);
            }
        });
    }

