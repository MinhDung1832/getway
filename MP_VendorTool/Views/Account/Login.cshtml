<!DOCTYPE html>
<html lang="en">

<head>
    <title>Đăng nhập</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @{
        Layout = null;
    }
    <script src="~/Scripts/jquery-1.9.1.js"></script>

    <link href="~/Resources/Login/bootstrap.css" rel="stylesheet" />
    <link href="~/Resources/Login/site.css" rel="stylesheet" />
    <link href="~/Resources/Login/Site_V1.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
</head>
<div class="content_home ct">
    <div class="container">

        <div class="row">
            <div class="limiter">
                <div class="">
                    <div class="logo" style="text-align: center; margin-top:-40px">
                        <a href="/Home/Index"><img src="/image/Logo.png" /></a>
                    </div>
                </div>
                <div class="container-login100">
                    <div class="bodys">
                        <h3 class="logotext">
                            BIBO SMART
                            <div style="font-family: sf-pro-text-regular; height: 15px; font-style: normal; font-weight: 400; font-size: 19px; line-height: 19px; text-align: center; color: #fff; padding-top: 0px;">
                                Vendors - Gateway
                            </div>
                        </h3>
                    </div>
                    <div class="wrap-login100">
                        <form method="POST" id="myForm">
                            @if (Session["err"] != null)
                            {
                                <p style="color:red;text-align: center;">@Session["err"].ToString()</p>
                            }
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <div class="col-md-12" style="width:100%; margin-bottom:3px; ">
                                    <div class="col-md-3 divlabel">
                                        <label for="uid" style="margin-right: 15px;">Tài khoản</label>
                                    </div>
                                    <div class="col-md-9 divuser">
                                        <input class="form-control" type="text" id="uid" name="uid">
                                    </div>
                                </div>
                                <div class="col-md-12 khcach">
                                    <div class="col-md-3 divlabel">
                                        <label for="pwd" style="margin-right: 15px;">Mật khẩu</label>
                                    </div>
                                    <div class="col-md-9 divuser">
                                        <input type="password" class="form-control" id="pwd" name="pwd">
                                        <i class="fa fa-eye" id="showPassword" style=" color:#000"></i>
                                    </div>
                                </div>
                                <div class="col-md-12 khcach">
                                    <div class="col-md-3" style="width:29.16666666667%">
                                    </div>
                                    <div class="col-md-5">
                                        <div class="bt_login" style="width:100%">
                                            <input style="width:50%" type="submit" class="login100-form-btn loggin" value="Đăng nhập" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 quenmk">
                                <div class="col-md-3" style="width:29.16666666667%">
                                </div>
                                <div class="col-md-5">
                                    <div class="text_change_pass"><a href="/Account/ForgotPassword">@MP_VendorTool.Resource.textchangePass ?</a> <a style="color:#fff" onclick="Register()">Đăng ký hợp tác</a></div>
                                    <div style=" clear:both"></div>
                                    <div style="color:#fff; display:none"><input type="text" name="IsChekIPV4" id="IsChekIPV4" /></div>
                                    <script>
                                        $(function () {
                                            js_checkip();
                                        });
                                    </script>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div style=" clear:both"></div>
        @*@Html.Partial("~/Views/Shared/_footer.cshtml")*@
    </div>
</div>

