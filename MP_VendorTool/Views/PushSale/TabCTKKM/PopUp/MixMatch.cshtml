                                    <th scope="col" style="width: 140px; max-width: 140px ">Deal Price/Disc.%</th>
                                    <th scope="col" style="width: 80px; max-width: 80px">Disc. Type</th>
                                    <th scope="col" style="width: 80px; max-width: 80px">Line Group</th>
