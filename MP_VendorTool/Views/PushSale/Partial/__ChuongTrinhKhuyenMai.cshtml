@using System.Data
<table id="tbl_Item" class="table table-bordered tb_detail">
    <thead>
        <tr style=" height: 35px;">
            <th class="text-left" style="width: 88px; max-width: 88px; ">
                Mã CT
            </th>
            <th class="text-left" style="width: 300px; max-width: 300px; ">
                Tên chương trình
            </th>
            <th class="text-left" style="width: 130px; max-width: 130px; ">
                Thời gian<br /> từ
            </th>
            <th class="text-left" style="width: 130px; max-width: 130px; ">
                Thời gian<br /> đến
            </th>
            <th class="text-center" style="width: 130px; max-width: 130px; ">
                Trạng thái
            </th>
            <th class="text-center" style="width: 130px; max-width: 130px; ">
                Người duyệt
            </th>
            <th class="text-center" style="width: 130px; max-width: 130px; ">
                Ngày duyệt
            </th>
            <th class="text-center" style="width: 130px; max-width: 130px; ">
                Chi tiết
            </th>
            <th class="text-center" style="width: 88px; max-width: 88px; ">
                Hành động
            </th>
        </tr>
    </thead>
    <tbody>
        @{
            if (Model != null)
            {
                var dt = Model as DataTable;
                if (dt.Rows.Count > 0)
                {
                    var i = 0;
                    foreach (DataRow item in dt.Rows)
                    {
                        var k = i + "_Row";
                        <tr>
                            <td class="text-left" style="width: 88px; max-width: 88px; ">
                                @item["MaCTKM"]
                            </td>
                            <td class="text-left" style="width: 300px; max-width: 300px; ">
                                @item["NameCTKM"].ToString().Replace("_", " ")
                            </td>
                            <td class="text-right" style="width: 130px; max-width: 130px; ">
                                @item["ToDay"]
                            </td>
                            <td class="text-right" style="width: 130px; max-width: 130px; ">
                                @item["FromDay"]
                            </td>
                            <td class="text-center" style="width: 130px; max-width: 130px; ">
                                @Html.Raw(item["Status"])
                            </td>
                            <td class="text-right" style="width: 130px; max-width: 130px; ">
                                @item["ModifyBy"]
                            </td>
                            <td class="text-right" style="width: 130px; max-width: 130px; ">
                                @item["ModifyDate"]
                            </td>
                            <td class="text-center" style="width: 130px; max-width: 130px; ">
                                <a onclick="ShowPopUp('@item["NameCTKM"]-@item["MaCTKM"]-@item["ID"]')" style=" width:80px; height:20px" class="btn_detail btn btn - secondary">Chi tiết</a>
                            </td>
                            <td class="text-center " id="CheckID" style="width: 88px; max-width: 88px; ">
                                @{
                                    if (@item["TrangThai"].ToString() != "1")
                                    {
                                        <input type="checkbox" name="CheckID" value="@item["NameCTKM"]-@item["MaCTKM"]" />
                                    }
                                    else
                                    {
                                        <input type="checkbox" disabled name="CheckID" value="@item["NameCTKM"]-@item["MaCTKM"]" />
                                    }
                                }
                            </td>
                        </tr>
                        i++;
                    }
                }
            }
        }
    </tbody>
    <tfoot>
    </tfoot>
</table>