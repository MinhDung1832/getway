@using MP_VendorTool.Common
@using MP_VendorTool.Models.Order
@{
    ViewBag.Title = "Danh sách hàng trả lại";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    table#tbl_Item tbody tr:nth-of-type(odd) {
        background: #f5f5f5 !important;
    }
</style>
<div class="content-wrapper">
    <div class="page-content fade-in-up">
        <div class="ibox">
            <div class="ibox-body">
                <div class="content_search">
                    <div class="AutoFix">
                        <div class="fromsearch">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="box_with">
                                        <div class="form-group row">
                                            <label for="vendorName" class="col-sm-4 col-form-label">Nhà cung cấp</label>
                                            <div class="col-sm-8">
                                                @if (Session["VendorName"] != null && Session["VendorName"].ToString().Length > 0)
                                                {
                                                    <input type="text" class="form-control" id="VendorCode" name="VendorCode" value="@Session["VendorCode"] - @Session["VendorName"]" disabled style=" padding-left: 7px !important; ">
                                                }
                                                else
                                                {
                                                    <select id="VendorCode" class="form-control selectpicker" data-live-search="true" onchange="js_searchbox();">
                                                        @if (ViewBag.list_vendor != null)
                                                        {
                                                            <option value="">--- Chọn NCC ---</option>
                                                            foreach (MP_VendorTool.Models.Order.objCombox box in (List<MP_VendorTool.Models.Order.objCombox>)ViewBag.list_vendor)
                                                            {
                                                                <option value="@box.Code - @box.Name">@box.Code - @box.Name</option>
                                                            }
                                                        }
                                                    </select>
                                                }

                                                @*<select class="form-control selectpicker" id="Mien" data-live-search="true" onchange="js_searchbox();">
                            <option value="">---Chọn Miền---</option>
                            @if (ViewBag.list_datalist_Mien != null)
                            {
                                foreach (objCombox box in (List<objCombox>)ViewBag.list_datalist_Mien)
                                {
                                    <option value="@box.Code">@box.Code - @box.Name</option>
                                }
                            }
                        </select>*@
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="textMien" class="col-sm-4 col-form-label">Mã hàng</label>
                                            <div class="col-sm-8">
                                                <input type="text" class="form-control" name="MaHang" id="MaHang" onchange="js_searchbox();" placeholder="Nhập mã hàng" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="textMien" class="col-sm-4 col-form-label">Kho trả</label>
                                            <div class="col-sm-8">
                                                <select class="form-control selectpicker" id="KhoTra" data-live-search="true" onchange="js_searchbox();">
                                                    <option value="">---Chọn cửa hàng ---</option>
                                                    @if (ViewBag.lst_store != null)
                                                    {
                                                        foreach (objCombox box in (List<objCombox>)ViewBag.lst_store)
                                                        {
                                                            <option value="@box.Code">@box.Code - @box.Name</option>
                                                        }
                                                    }
                                                </select>

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="textStatus" class="col-sm-4 col-form-label">Giao hàng <span style="color:red">(*)</span> </label>
                                            <div class="col-sm-8">
                                                <select class="form-control selectpicker" id="GiaoHang" data-live-search="true" onchange="js_searchbox();">
                                                    <option value="">--- Chọn nơi giao hàng ---</option>
                                                    <option value="1">Nhận tại kho tổng theo miền</option>
                                                    <option value="2">Nhận tại kho tổng MB</option>
                                                    <option value="3">Nhận tại kho tổng MN</option>
                                                    <option value="4">Nhận tại cửa hàng</option>
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="col-md-1"> </div>
                                <div class="col-md-4">
                                    <div class="box_with">

                                        <div class="form-group row">
                                            <label for="Ngay" class="col-sm-4 col-form-label">Tỉnh thành</label>
                                            <div class="col-sm-8" ondblclick="$('#Ngay').val('').trigger('change');">
                                                <select class="form-control selectpicker" id="TinhThanh" data-live-search="true" onchange="js_searchbox();">
                                                    <option value="">---Chọn Tỉnh/Thành---</option>
                                                    @if (ViewBag.province != null)
                                                    {
                                                        foreach (objCombox box in (List<objCombox>)ViewBag.province)
                                                        {
                                                            <option value="@box.Code">@box.Code - @box.Name</option>
                                                        }
                                                    }
                                                </select>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="textStatus" class="col-sm-4 col-form-label">Trạng thái</label>
                                            <div class="col-sm-8">
                                                <select class="form-control selectpicker" id="TrangThai" data-live-search="true" onchange="js_searchbox()">
                                                    <option value="">-- Chọn trạng thái ---</option>
                                                    <option value="0">Chưa xác nhận</option>
                                                    <option value="1">Đã xác nhận</option>
                                                </select>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="textStatus" class="col-sm-4 col-form-label">Tình trạng </label>
                                            <div class="col-sm-8">
                                                <select class="form-control selectpicker" id="TinhTrang" data-live-search="true" onchange="js_searchbox()">
                                                    <option value="">--- Chọn tình trạng ---</option>
                                                    <option value="Cận date">Cận date</option>
                                                    <option value="">All</option>
                                                    @*@if (ViewBag.listStatus != null)
                            {
                                foreach (objCombox box in (List<objCombox>)ViewBag.listStatus)
                                {
                                    <option value="@box.Name">@box.Name</option>
                                }
                            }*@
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3" style="text-align: center;">
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            <a href="#" class="btn btn-secondary px-5 btgetw" id="btnGetChecks" onclick="js_searchbox()"><i class="fa fa-search" aria-hidden="true" style="margin-top: 3px; margin-right: 3px;"></i> Tìm kiếm</a>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-sm-12">
                                            <a id="btntuchoi" onclick="js_saveCheck();" class="btn btn-success px-5 rounded-0 btgetw" style=" color:#fff"><i class="fa fa-save" aria-hidden="true" style="margin-top: 3px; margin-right: 3px;"></i> Xác nhận</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="div-content" style=" padding-top: 148px; ">
                    @Html.Partial("~/Views/Order/Partial/__ReturnedGoods.cshtml")
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function () {
        $('#txtHead').html("Danh sách hàng trả lại");
        $('#f_dev').html("Dữ liệu khai báo Trading Term");
        $('#f_header').html("");
        $('#v_review').hide();
        $('#v_view').hide();
        $('#v_approve').hide();
        js_GetList();
    });
    function js_searchbox() {
        js_GetList();
    }
    function js_ReloadTable() {

        $('#tbl_Item').DataTable({
            lengthMenu: [[200, 50, 70, 100, 1000, -1], [200, 50, 70, 100, 1000]],
            //columnDefs: [
            //    //{ 'targets': 0, 'searchable': false, 'orderable': false },
            //    { 'targets': 9, 'searchable': false, 'orderable': false },
            //    { 'targets': 10, 'searchable': false, 'orderable': false },
            //    { 'targets': 11, 'searchable': false, 'orderable': false },
            //    { 'targets': 12, 'searchable': false, 'orderable': false },
            //    { 'targets': 13, 'searchable': false, 'orderable': false },
            //    { 'targets': 14, 'searchable': false, 'orderable': false },
            //    { 'targets': 15, 'searchable': false, 'orderable': false },
            //],
            "order": [[4, "asc"], [6, "asc"]],
            //columnDefs: [
            //    { 'targets': 12, 'orderable': false }
            //],
            "searching": false,
            fixedHeader: true,
            fixedHeader: {
                headerOffset: 235
            },
            autoWidth: false,
            "language": {
                "emptyTable": "Không có dữ liệu !"
            }
        });
    }

    function js_GetList() {
        var NCC = fomart_split($("#VendorCode").val(), 0);
        var Tinh = $("#TinhThanh").val();
        var Kho = $("#KhoTra").val();
        var MaHang = $("#MaHang").val();
        var TinhTrang = $("#TinhTrang").val();
        var TrangThai = $("#TrangThai").val();
        var GiaoHang = $("#GiaoHang").val();
        if (GiaoHang != "") {
            $.ajax({
                url: '/Order/GetList_ReturnedGoods',//SP_GetWay_QLHH_getlstCH_NCC
                type: 'POST',
                data: JSON.stringify({ NCC: NCC, Tinh: Tinh, Kho: Kho, MaHang: MaHang, TinhTrang: TinhTrang, TrangThai: TrangThai, GiaoHang: GiaoHang }),
                contentType: 'application/json, charset=utf-8',
                beforeSend: function () {
                    js_Loading(true, 1);
                },
                success: function (data) {
                    $("#div-content").find('tbody').empty();
                    $('#div-content').html(data);
                    js_ReloadTable();
                    js_Loading(false, 1);
                },
                error: function () {
                    js_Loading(false, 1);
                }
            });
        }
    }
</script>
