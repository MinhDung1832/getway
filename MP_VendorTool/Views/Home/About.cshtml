<div id="sel_txt"></div>

<select id="mySelect" class="form-control" onchange="ReII()">
    <option value="">@MP_VendorTool.Resource.multi_def</option>
    <option value="AL">Alabama</option>
    <option value="AK">Alaska</option>
    <option value="AZ">Arizona</option>
    <option value="AR">Arkansas</option>
</select>


<input type="button" class="btn btn-danger" onclick="Save()" value="btn_Save" />
