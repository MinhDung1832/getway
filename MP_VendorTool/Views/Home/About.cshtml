<script type="text/javascript" src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript" src="~/Scripts/semantic.min.js"></script>

<script type="text/javascript">

    $(document).ready(function () {

        $("#mySelect option[value='AR']").remove();
    });

    function ReII() {

        $('#sel_txt').append('<input type="button" id="btn_del_' + $('#mySelect').val() + '"  name="' + $('#mySelect').val() + '-' + $('#mySelect option:selected').text() + '" value="' + $('#mySelect option:selected').text() + '  &#10006;" onclick="AddSEl(\'' + $('#mySelect').val() + '\',\'' + $('#mySelect option:selected').text() + '\')" class="btn-primary col-md-2" style="float:left; margin:5px;border-radius: 20px;"/>')

        var x = document.getElementById("mySelect");
        x.remove(x.selectedIndex);
    }

    function AddSEl(strId, strVal) {

        var x = document.getElementById("mySelect");
        var option = document.createElement("option");
        option.value = strId;
        option.text = strVal;
        x.add(option);

        sortSelectOptions('#mySelect');

        document.getElementById("btn_del_" + strId).remove();
    }

    function sortSelectOptions(selectElement) {
        var options = $(selectElement + " option");

        options.sort(function (a, b) {
            if (a.text.toUpperCase() > b.text.toUpperCase()) return 1;
            else if (a.text.toUpperCase() < b.text.toUpperCase()) return -1;
            else return 0;
        });

        $(selectElement).empty().append(options);
        $(selectElement).val("");
    }


    function Save() {
        var c = document.getElementById("sel_txt").children;
        for (i = 0; i < c.length; i++) {
            console.log(c[i].name);
        }
    }
</script>

