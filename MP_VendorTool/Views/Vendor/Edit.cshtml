                if (r1.code == '0') {
                    alert("Yêu cầu thay đổi thông tin vendor thành công.");
                } else {
                    alert(r1.message);
                }
            }
        });
    }

    function addBtn(strSelID, strId, strVal) {
        $('#' + strSelID + '_txt').append('<input type="button" id="btn_' + strSelID + '_del_' + strId + '"  name="' + strId + '-' + strVal + '" value="' + strVal + '  &#10006;" onclick="AddSEl(\'' + strSelID + '\',\'' + strId + '\',\'' + strVal + '\')" class="btn-primary" style="float:left; margin:3px;border-radius: 20px; font-size: 12px !important;"/>');

        $("#" + strSelID + " option[value='" + strId + "']").remove();
    }

    function ReII(strSelID) {

        $('#' + strSelID + '_txt').append('<input type="button" id="btn_' + strSelID + '_del_' + $('#' + strSelID + '').val() + '"  name="' + $('#' + strSelID + '').val() + '-' + $('#' + strSelID + ' option:selected').text() + '" value="' + $('#' + strSelID + ' option:selected').text() + '  &#10006;" onclick="AddSEl(\'' + strSelID + '\',\'' + $('#' + strSelID + '').val() + '\',\'' + $('#' + strSelID + ' option:selected').text() + '\')" class="btn-primary" style="float:left; margin:5px;border-radius: 20px;  font-size: 12px !important;"/>');

        var x = document.getElementById(strSelID);
        x.remove(x.selectedIndex);
    }


    function AddSEl(strSelID, strId, strVal) {

