        cap_obj.registrationTax = $('#registrationTax').val();
        cap_obj.yearActive = $('#yearActive').val();
        cap_obj.employeesScale = $('#employeesScale').val();
        cap_obj.coverageMarket = $('#coverageMarket').val();// readeMulti('coverageMarket');
        cap_obj.previousRevenue = $('#previousRevenue').val();
        cap_obj.competencyCore = $('#competencyCore').val();// readeMulti('competencyCore');
        cap_obj.customerKey = $('#customerKey').val();
        cap_obj.warehouseAcreage = $('#warehouseAcreage').val();
        cap_obj.truckQuantity = $('#truckQuantity').val();

      //  console.log(JSON.stringify(cap_obj));
        //End Capability

        //Contact
        var con_obj = {};
        con_obj.registrationTax = $('#registrationTax').val();
        con_obj.BBM_Code = '@ViewBag.vd_con.BBM_Code';
        con_obj.id = '@ViewBag.vd_con.id';
