<script type="text/javascript">

    $(document).ready(function () {
        $('#header_title').html('@MP_VendorTool.Resource.VendorInfoTT');
        $('#txtHead').html("chi tiết thông tin doanh nghiệp");
        if ('@ViewBag.vd_info.E_Invoice' == '1') {
            document.getElementById("E_Invoice").checked = true;
        } else {
            document.getElementById("E_Invoice").checked = false;
        }

     var firmName = $('#firmName').val();
        if (firmName=='')
        {
            $('#firmName').val('@Session["uname"]');
        }

    });

    function addBtn(strSelID, strId, strVal) {
        $('#' + strSelID + '_txt').append('<input type="button" id="btn_' + strSelID + '_del_' + strId + '"  name="' + strId + '-' + strVal + '" value="' + strVal + '  &#10006;"  class="btn-primary" style="float:left; margin:3px;border-radius: 20px; font-size: 12px !important;"/>');

        $("#" + strSelID + " option[value='" + strId + "']").remove();
    }
</script>
